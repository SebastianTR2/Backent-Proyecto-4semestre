@model List<Machly.Web.Models.Notification>

@{
    ViewData["Title"] = "Mis Notificaciones";
    Layout = "_Layout";
}

<div class="page-header">
    <div>
        <h1 class="page-title">Centro de Notificaciones</h1>
        <p class="page-subtitle">Mantente al día con las últimas actualizaciones</p>
    </div>
</div>

<div class="container-fluid">
    @if (!Model.Any())
    {
        <div class="text-center py-5">
            <div class="mb-3">
                <i class="fas fa-bell-slash fa-3x text-muted"></i>
            </div>
            <h4 class="text-muted">No tienes notificaciones nuevas</h4>
            <p class="text-muted">Te avisaremos cuando haya actividad importante en tu cuenta.</p>
        </div>
    }
    else
    {
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="list-group shadow-sm">
                    @foreach (var notification in Model.OrderByDescending(n => n.CreatedAt))
                    {
                        <div class="list-group-item list-group-item-action p-4 @(notification.IsRead ? "bg-light" : "border-start border-5 border-primary")">
                            <div class="d-flex w-100 justify-content-between align-items-center mb-2">
                                <h5 class="mb-1 @(notification.IsRead ? "text-muted" : "fw-bold text-primary")">
                                    @if (!notification.IsRead)
                                    {
                                        <span class="badge bg-primary me-2">NUEVA</span>
                                    }
                                    @notification.Title
                                </h5>
                                <small class="text-muted">
                                    <i class="far fa-clock me-1"></i>
                                    @notification.CreatedAt.ToLocalTime().ToString("g")
                                </small>
                            </div>
                            <p class="mb-3 @(notification.IsRead ? "text-muted" : "")">@notification.Message</p>
                            
                            @if (!notification.IsRead)
                            {
                                <div class="d-flex justify-content-end">
                                    <form asp-action="MarkAsRead" asp-route-id="@notification.Id" method="post">
                                        <button type="submit" class="btn btn-sm btn-outline-primary rounded-pill px-3">
                                            <i class="fas fa-check me-1"></i>Marcar como leída
                                        </button>
                                    </form>
                                </div>
                            }
                        </div>
                    }
                </div>
            </div>
        </div>
    }
</div>
