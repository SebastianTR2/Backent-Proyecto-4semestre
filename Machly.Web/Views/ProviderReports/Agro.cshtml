@model Machly.Web.Models.Reports.ProviderAgroReportDto
@{
    ViewData["Title"] = "Reporte Agronómico";
    var scope = (ViewData["Scope"]?.ToString() ?? "month").ToLowerInvariant();
    string FilterButtonClass(string value) => scope == value ? "btn btn-primary btn-sm" : "btn btn-outline-secondary btn-sm";
}

<div class="page-header">
    <div>
        <h1 class="page-title">Reporte Agronómico</h1>
        <p class="page-subtitle">Rendimiento de servicios agrícolas</p>
    </div>
</div>

<div class="card shadow-sm mb-4">
    <div class="card-body">
        <div class="d-flex flex-wrap gap-2 align-items-center mb-4">
            <span class="text-muted me-2">Rango:</span>
            <a asp-action="Agro" asp-route-scope="month" class="@FilterButtonClass("month")">Mes</a>
            <a asp-action="Agro" asp-route-scope="3m" class="@FilterButtonClass("3m")">3 Meses</a>
            <a asp-action="Agro" asp-route-scope="year" class="@FilterButtonClass("year")">Año</a>
        </div>

        <div class="row text-center">
            <div class="col-md-4">
                <div class="p-3 border rounded bg-light">
                    <h3 class="text-success">@Model.TotalHectares.ToString("N2")</h3>
                    <span class="text-muted">Hectáreas Trabajadas</span>
                </div>
            </div>
            <div class="col-md-4">
                <div class="p-3 border rounded bg-light">
                    <h3 class="text-warning">@Model.TotalTons.ToString("N2")</h3>
                    <span class="text-muted">Toneladas Movidas</span>
                </div>
            </div>
            <div class="col-md-4">
                <div class="p-3 border rounded bg-light">
                    <h3 class="text-info">@Model.TotalKm.ToString("N2")</h3>
                    <span class="text-muted">Kilómetros Recorridos</span>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="card shadow-sm">
    <div class="card-header bg-white">
        <h5 class="card-title mb-0">Detalle por Máquina</h5>
    </div>
    <div class="table-responsive">
        <table class="table table-hover align-middle mb-0">
            <thead class="table-light">
                <tr>
                    <th>Máquina</th>
                    <th class="text-end">Hectáreas</th>
                    <th class="text-end">Toneladas</th>
                    <th class="text-end">Kilómetros</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var d in Model.Details)
                {
                    <tr>
                        <td class="fw-bold">@d.MachineTitle</td>
                        <td class="text-end">@d.Hectares.ToString("N2")</td>
                        <td class="text-end">@d.Tons.ToString("N2")</td>
                        <td class="text-end">@d.Km.ToString("N2")</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
