<h4 class="mt-4">Tarifas Agronómicas</h4>

<div class="row">
    <div class="col-md-4">
        <div class="mb-3">
            <label class="form-label">Hectárea (Bs/ha)</label>
            <input name="TariffsAgro.Hectarea"
                   class="form-control"
                   type="number"
                   step="0.01"
                   value="@(Model.TariffsAgro?.Hectarea ?? 150)" />
        </div>
    </div>

    <div class="col-md-4">
        <div class="mb-3">
            <label class="form-label">Tonelada (Bs/t)</label>
            <input name="TariffsAgro.Tonelada"
                   class="form-control"
                   type="number"
                   step="0.01"
                   value="@(Model.TariffsAgro?.Tonelada ?? 45)" />
        </div>
    </div>

    <div class="col-md-4">
        <div class="mb-3">
            <label class="form-label">Precio por Km (Tarifa tramo 1)</label>
            <input name="TariffsAgro.KmTariffs[0].TarifaPorKm"
                   class="form-control"
                   type="number"
                   step="0.01"
                   value="@(Model.TariffsAgro?.KmTariffs?.FirstOrDefault()?.TarifaPorKm ?? 5)" />
        </div>
    </div>
</div>
