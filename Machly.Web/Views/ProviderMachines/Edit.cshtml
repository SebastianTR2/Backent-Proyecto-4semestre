@model Machine
@{
    ViewData["Title"] = "Editar Máquina";
}

<h2>Editar Máquina</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="ProviderId" />
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="row">
        <div class="col-md-6">
            <div class="mb-3">
                <label asp-for="Title" class="form-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Description" class="form-label"></label>
                <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Type" class="form-label"></label>
                <input asp-for="Type" class="form-control" />
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Category" class="form-label"></label>
                <input asp-for="Category" class="form-control" />
                <span asp-validation-for="Category" class="text-danger"></span>
            </div>
        </div>

        <div class="col-md-6">
            <div class="mb-3">
                <label asp-for="PricePerDay" class="form-label">Precio por Día (Bs)</label>
                <input asp-for="PricePerDay" class="form-control" type="number" step="0.01" />
                <span asp-validation-for="PricePerDay" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="PricePerHour" class="form-label">Precio por Hora (Bs)</label>
                <input asp-for="PricePerHour" class="form-control" type="number" step="0.01" />
                <span asp-validation-for="PricePerHour" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <div class="form-check">
                    <input asp-for="WithOperator" class="form-check-input" type="checkbox" />
                    <label asp-for="WithOperator" class="form-check-label">Incluye operador</label>
                </div>
            </div>

            <div class="mb-3">
                <label asp-for="Lat" class="form-label">Latitud</label>
                <input asp-for="Lat" class="form-control" type="number" step="0.000001" />
                <span asp-validation-for="Lat" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Lng" class="form-label">Longitud</label>
                <input asp-for="Lng" class="form-control" type="number" step="0.000001" />
                <span asp-validation-for="Lng" class="text-danger"></span>
            </div>
        </div>
    </div>

    <h4 class="mt-4">Tarifas Agronómicas (Opcional)</h4>
    <div class="row">
        <div class="col-md-4">
            <div class="mb-3">
                <label class="form-label">Hectárea (Bs/ha)</label>
                <input name="TariffsAgro.Hectarea"
                       class="form-control"
                       type="number"
                       step="0.01"
                       value="@(Model.TariffsAgro?.Hectarea)" />
            </div>
        </div>

        <div class="col-md-4">
            <div class="mb-3">
                <label class="form-label">Tonelada (Bs/t)</label>
                <input name="TariffsAgro.Tonelada"
                       class="form-control"
                       type="number"
                       step="0.01"
                       value="@(Model.TariffsAgro?.Tonelada)" />
            </div>
        </div>

        <div class="col-md-4">
            <div class="mb-3">
                <label class="form-label">Precio por Km (Bs/km)</label>
                <input name="TariffsAgro.Km"
                       class="form-control"
                       type="number"
                       step="0.01"
                       value="@(Model.TariffsAgro?.Km)" />
            </div>
        </div>
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Guardar Cambios</button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
