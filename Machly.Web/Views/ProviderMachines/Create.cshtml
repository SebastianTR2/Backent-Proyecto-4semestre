@model Machine
@{
    ViewData["Title"] = "Nueva Máquina";
}

<h2>Nueva Máquina</h2>

<form asp-action="Create" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="row">
        <div class="col-md-6">
            <div class="mb-3">
                <label asp-for="Title" class="form-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Description" class="form-label"></label>
                <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Type" class="form-label"></label>
                <input asp-for="Type" class="form-control" placeholder="Ej: Tractor, Cosechadora" />
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Category" class="form-label"></label>
                <input asp-for="Category" class="form-control" placeholder="Ej: Agrícola" />
                <span asp-validation-for="Category" class="text-danger"></span>
            </div>
        </div>

        <div class="col-md-6">
            <div class="mb-3">
                <label asp-for="PricePerDay" class="form-label"></label>
                <input asp-for="PricePerDay" class="form-control" type="number" step="0.01" />
                <span asp-validation-for="PricePerDay" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <div class="form-check">
                    <input asp-for="WithOperator" class="form-check-input" type="checkbox" />
                    <label asp-for="WithOperator" class="form-check-label">Incluye operador</label>
                </div>
            </div>

            <div class="mb-3">
                <label asp-for="Lat" class="form-label">Latitud</label>
                <input asp-for="Lat" class="form-control" type="number" step="0.000001" />
            </div>

            <div class="mb-3">
                <label asp-for="Lng" class="form-label">Longitud</label>
                <input asp-for="Lng" class="form-control" type="number" step="0.000001" />
            </div>
        </div>
    </div>

    <h4 class="mt-4">Tarifas Agronómicas</h4>
    <div class="row">
        <div class="col-md-4">
            <div class="mb-3">
                <label class="form-label">Precio por Hectárea</label>
                <input name="TariffsAgro.PricePerHectare" class="form-control" type="number" step="0.01" value="350" />
            </div>
        </div>
        <div class="col-md-4">
            <div class="mb-3">
                <label class="form-label">Precio por Tonelada</label>
                <input name="TariffsAgro.PricePerTon" class="form-control" type="number" step="0.01" value="45" />
            </div>
        </div>
        <div class="col-md-4">
            <div class="mb-3">
                <label class="form-label">Precio por Km/Ton</label>
                <input name="TariffsAgro.PricePerKmPerTon" class="form-control" type="number" step="0.01" value="0.9" />
            </div>
        </div>
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Crear Máquina</button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

