@model List<Machine>
@{
    ViewData["Title"] = "Mis Máquinas";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>Mis Máquinas</h2>
    <a asp-action="Create" class="btn btn-primary">Nueva Máquina</a>
</div>

@if (Model.Any())
{
    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Título</th>
                    <th>Tipo</th>
                    <th>Precio/Día</th>
                    <th>Rating</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var machine in Model)
                {
                    <tr>
                        <td>@machine.Title</td>
                        <td>@machine.Type</td>
                        <td>Bs. @machine.PricePerDay.ToString("N2")</td>
                        <td>@machine.RatingAvg.ToString("F1") (@machine.RatingCount)</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@machine.Id" class="btn btn-sm btn-outline-primary">Editar</a>
                            <form asp-action="Delete" asp-route-id="@machine.Id" method="post" class="d-inline" onsubmit="return confirm('¿Está seguro de eliminar esta máquina?');">
                                <button type="submit" class="btn btn-sm btn-outline-danger">Eliminar</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="alert alert-info">
        No tienes máquinas registradas. <a asp-action="Create">Crea tu primera máquina</a>
    </div>
}

