<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Machly</title>
    
    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800;900&family=Poppins:wght@300;400;500;600;700;800;900&display=swap" rel="stylesheet">
    
    <!-- Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    
    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <!-- Modern Navbar -->
    <header class="navbar-modern">
        <nav class="navbar navbar-expand-lg navbar-dark fixed-top">
            <div class="container-fluid px-4 px-lg-5">
                <!-- Logo -->
                <a class="navbar-brand logo-brand" asp-controller="Home" asp-action="Index">
                    <span class="logo-icon">游뚶</span>
                    <span class="logo-text">Machly</span>
                </a>
                
                <!-- Mobile Toggle -->
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">Inicio</a>
                        </li>
                        
                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            var role = User.FindFirst(System.Security.Claims.ClaimTypes.Role)?.Value;
                            
                            if (role == "ADMIN")
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Admin" asp-action="Dashboard">
                                        <i class="fas fa-tachometer-alt me-2"></i>Dashboard
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Admin" asp-action="Users">
                                        <i class="fas fa-users me-2"></i>Usuarios
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Admin" asp-action="Machines">
                                        <i class="fas fa-tractor me-2"></i>M치quinas
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Admin" asp-action="Bookings">
                                        <i class="fas fa-calendar-check me-2"></i>Reservas
                                    </a>
                                </li>
                            }
                            else if (role == "PROVIDER")
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="ProviderMachines" asp-action="Index">
                                        <i class="fas fa-tractor me-2"></i>Mis M치quinas
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="ProviderMachines" asp-action="Bookings">
                                        <i class="fas fa-calendar-check me-2"></i>Reservas
                                    </a>
                                </li>
                            }
                            else if (role == "RENTER")
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Renter" asp-action="Explore">
                                        <i class="fas fa-search me-2"></i>Explorar
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Renter" asp-action="Favorites">
                                        <i class="fas fa-heart me-2"></i>Favoritos
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Renter" asp-action="Index">
                                        <i class="fas fa-calendar-alt me-2"></i>Mis Reservas
                                    </a>
                                </li>
                            }

                            <!-- Enlace de Soporte para todos los usuarios autenticados -->
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Support" asp-action="Index">
                                    <i class="fas fa-headset me-2"></i>Soporte
                                </a>
                            </li>
                        }
                    </ul>
                    
                    <!-- Right Side Actions -->
                    <div class="navbar-actions">
                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            <!-- Notifications Link -->
                            <a asp-controller="Notifications" asp-action="Index" class="btn btn-link text-white me-2 position-relative">
                                <i class="fas fa-bell fa-lg"></i>
                                <!-- Optional: Badge for unread count could go here -->
                            </a>

                            <!-- User Dropdown -->
                            <div class="dropdown user-dropdown">
                                <button class="btn btn-user-dropdown dropdown-toggle" type="button" id="userDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="fas fa-user-circle me-2"></i>
                                    <span class="d-none d-md-inline">@User.Identity.Name</span>
                                    <i class="fas fa-chevron-down ms-2"></i>
                                </button>
                                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                                    <li>
                                        <span class="dropdown-item-text">
                                            <small class="text-muted">@User.FindFirst(System.Security.Claims.ClaimTypes.Email)?.Value</small>
                                        </span>
                                    </li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <form asp-controller="Account" asp-action="Logout" method="post" class="m-0">
                                            <button type="submit" class="dropdown-item">
                                                <i class="fas fa-sign-out-alt me-2"></i>Cerrar Sesi칩n
                                            </button>
                                        </form>
                                    </li>
                                </ul>
                            </div>
                        }
                        else
                        {
                            <!-- Login & Register Buttons -->
                            <a asp-controller="Account" asp-action="Login" class="btn btn-nav-login me-2">
                                <i class="fas fa-sign-in-alt me-2"></i>Iniciar Sesi칩n
                            </a>
                            <a asp-controller="Account" asp-action="Register" class="btn btn-primary-modern">
                                <i class="fas fa-user-plus me-2"></i>Registrarse
                            </a>
                        }
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <!-- Main Content -->
    <main role="main" class="main-content">
        <div class="page-container">
            @RenderBody()
        </div>
    </main>

    <!-- Modern Footer -->
    <footer class="footer-modern">
        <div class="container-fluid px-4 px-lg-5">
            <div class="row py-5">
                <div class="col-lg-4 mb-4 mb-lg-0">
                    <div class="footer-brand">
                        <span class="logo-icon">游뚶</span>
                        <span class="logo-text">Machly</span>
                    </div>
                    <p class="footer-description mt-3">
                        La plataforma l칤der para alquilar maquinaria agr칤cola y urbana. 
                        Conectamos propietarios con arrendatarios de forma r치pida y segura.
                    </p>
                </div>
                <div class="col-lg-2 col-md-4 mb-4 mb-lg-0">
                    <h5 class="footer-title">Enlaces</h5>
                    <ul class="footer-links">
                        <li><a href="#">Sobre Nosotros</a></li>
                        <li><a href="#">C칩mo Funciona</a></li>
                        <li><a href="#">Precios</a></li>
                        <li><a href="#">Contacto</a></li>
                    </ul>
                </div>
                <div class="col-lg-2 col-md-4 mb-4 mb-lg-0">
                    <h5 class="footer-title">Legal</h5>
                    <ul class="footer-links">
                        <li><a href="#">T칠rminos y Condiciones</a></li>
                        <li><a href="#">Pol칤tica de Privacidad</a></li>
                        <li><a href="#">Cookies</a></li>
                    </ul>
                </div>
                <div class="col-lg-2 col-md-4 mb-4 mb-lg-0">
                    <h5 class="footer-title">Soporte</h5>
                    <ul class="footer-links">
                        <li><a href="#">Centro de Ayuda</a></li>
                        <li><a href="#">FAQ</a></li>
                        <li><a href="#">Contactar Soporte</a></li>
                    </ul>
                </div>
                <div class="col-lg-2 col-md-4">
                    <h5 class="footer-title">S칤guenos</h5>
                    <div class="social-links">
                        <a href="#" class="social-link" aria-label="Facebook"><i class="fab fa-facebook-f"></i></a>
                        <a href="#" class="social-link" aria-label="Twitter"><i class="fab fa-twitter"></i></a>
                        <a href="#" class="social-link" aria-label="Instagram"><i class="fab fa-instagram"></i></a>
                        <a href="#" class="social-link" aria-label="LinkedIn"><i class="fab fa-linkedin-in"></i></a>
                    </div>
                </div>
            </div>
            <div class="footer-bottom">
                <div class="row">
                    <div class="col-12 text-center">
                        <p>&copy; @DateTime.Now.Year Machly. Todos los derechos reservados.</p>
                    </div>
                </div>
            </div>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
