@model List<Machly.Web.Models.Machine>

@{
    ViewData["Title"] = "Mis Favoritos";
    Layout = "_Layout";
}

<div class="container py-5">
    <h2 class="mb-4">Mis Favoritos</h2>

    @if (!Model.Any())
    {
        <div class="alert alert-info">
            No tienes máquinas en tu lista de favoritos.
        </div>
    }
    else
    {
        <div class="row row-cols-1 row-cols-md-3 g-4">
            @foreach (var machine in Model)
            {
                <div class="col">
                    <div class="card h-100 shadow-sm">
                        @if (machine.Photos != null && machine.Photos.Any())
                        {
                            <img src="@machine.Photos.First()" class="card-img-top" alt="@machine.Title" style="height: 200px; object-fit: cover;">
                        }
                        else
                        {
                            <div class="bg-light d-flex align-items-center justify-content-center" style="height: 200px;">
                                <i class="fas fa-tractor fa-3x text-secondary"></i>
                            </div>
                        }
                        <div class="card-body">
                            <h5 class="card-title">@machine.Title</h5>
                            <p class="card-text text-muted">@machine.Category</p>
                            <p class="card-text fw-bold text-primary">$@machine.PricePerDay / día</p>
                        </div>
                        <div class="card-footer bg-white border-top-0 d-flex justify-content-between align-items-center">
                            <a asp-controller="Home" asp-action="Details" asp-route-id="@machine.Id" class="btn btn-outline-primary btn-sm">Ver Detalles</a>
                            
                            <form asp-controller="Renter" asp-action="ToggleFavorite" method="post">
                                <input type="hidden" name="machineId" value="@machine.Id" />
                                <button type="submit" class="btn btn-danger btn-sm" title="Quitar de favoritos">
                                    <i class="fas fa-heart"></i>
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>
