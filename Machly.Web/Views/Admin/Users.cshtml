@model List<Machly.Web.Models.Admin.ApiAdminUserSummaryDto>
@{
    ViewData["Title"] = "Usuarios";
}

<div class="page-header">
    <div>
        <h1 class="page-title">Usuarios</h1>
        <p class="page-subtitle">Gestiona los usuarios registrados en Machly</p>
    </div>
</div>

<div class="card shadow-sm">
    <div class="table-responsive">
        <table class="table table-hover align-middle mb-0">
            <thead class="table-light">
                <tr>
                    <th>Nombre</th>
                    <th>Email</th>
                    <th>Rol</th>
                    <th>Proveedor Verificado</th>
                    <th>Creado</th>
                    <th class="text-end">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <td>@user.Name</td>
                        <td>@user.Email</td>
                        <td>
                            <span class="badge bg-@(user.Role == "ADMIN" ? "dark" : user.Role == "PROVIDER" ? "primary" : "success")">
                                @user.Role
                            </span>
                        </td>
                        <td>
                            @if (user.Role == "PROVIDER")
                            {
                                <span class="badge bg-@(user.IsVerifiedProvider ? "success" : "warning text-dark")">
                                    @(user.IsVerifiedProvider ? "Verificado" : "Pendiente")
                                </span>
                            }
                            else
                            {
                                <span class="text-muted">N/A</span>
                            }
                        </td>
                        <td>@user.CreatedAt.ToLocalTime().ToString("dd/MM/yyyy")</td>
                        <td class="text-end">
                            <a asp-action="UserDetails" asp-route-id="@user.Id" class="btn btn-sm btn-outline-secondary">
                                Ver detalles
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

