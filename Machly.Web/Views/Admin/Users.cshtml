@model List<Machly.Web.Models.Admin.ApiAdminUserSummaryDto>
@{
    ViewData["Title"] = "Usuarios";
}

<div class="page-header">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <h1 class="page-title">Usuarios</h1>
            <p class="page-subtitle">Gestiona los usuarios registrados en Machly</p>
        </div>
        <div class="d-flex gap-2">
            <form method="get" class="d-flex gap-2">
                <select name="role" class="form-select" onchange="this.form.submit()">
                    <option value="">Todos los Roles</option>
                    <!option value="ADMIN" @(Context.Request.Query["role"] == "ADMIN" ? "selected" : "")>Administrador</!option>
                    <!option value="PROVIDER" @(Context.Request.Query["role"] == "PROVIDER" ? "selected" : "")>Proveedor</!option>
                    <!option value="RENTER" @(Context.Request.Query["role"] == "RENTER" ? "selected" : "")>Arrendador</!option>
                </select>
            </form>
            <a asp-action="UserCreate" class="btn btn-primary">
                <i class="bi bi-plus-lg"></i> Crear Usuario
            </a>
        </div>
    </div>
</div>

<div class="card shadow-sm">
    <div class="table-responsive">
        <table class="table table-hover align-middle mb-0">
            <thead class="table-light">
                <tr>
                    <th>Nombre</th>
                    <th>Email</th>
                    <th>Rol</th>
                    <th>Proveedor Verificado</th>
                    <th>Creado</th>
                    <th class="text-end">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <td>@user.Name</td>
                        <td>@user.Email</td>
                        <td>
                            <span class="badge bg-@(user.Role == "ADMIN" ? "dark" : user.Role == "PROVIDER" ? "primary" : "success")">
                                @user.Role
                            </span>
                        </td>
                        <td>
                            @if (user.Role == "PROVIDER")
                            {
                                <span class="badge bg-@(user.IsVerifiedProvider ? "success" : "warning text-dark")">
                                    @(user.IsVerifiedProvider ? "Verificado" : "Pendiente")
                                </span>
                            }
                            else
                            {
                                <span class="text-muted">N/A</span>
                            }
                        </td>
                        <td>@user.CreatedAt.ToLocalTime().ToString("dd/MM/yyyy")</td>
                        <td class="text-end">
                            <a asp-action="UserDetails" asp-route-id="@user.Id" class="btn btn-sm btn-outline-secondary" title="Ver detalles">
                                <i class="bi bi-eye"></i>
                            </a>
                            <a asp-action="UserEdit" asp-route-id="@user.Id" class="btn btn-sm btn-outline-primary" title="Editar">
                                <i class="bi bi-pencil"></i>
                            </a>
                            <form asp-action="UserDelete" asp-route-id="@user.Id" method="post" class="d-inline" onsubmit="return confirm('¿Estás seguro de eliminar este usuario?');">
                                <button type="submit" class="btn btn-sm btn-outline-danger" title="Eliminar">
                                    <i class="bi bi-trash"></i>
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

