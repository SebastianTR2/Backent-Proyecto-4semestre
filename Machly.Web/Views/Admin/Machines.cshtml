@model List<Machly.Web.Models.Admin.AdminMachineListItem>
@{
    ViewData["Title"] = "Máquinas";
    var typeFilter = ViewData["TypeFilter"]?.ToString();
    var categoryFilter = ViewData["CategoryFilter"]?.ToString();
    var providerFilter = ViewData["ProviderFilter"]?.ToString();
}

<div class="page-header">
    <div>
        <h1 class="page-title">Máquinas publicadas</h1>
        <p class="page-subtitle">Listado global de máquinas disponibles en Machly</p>
    </div>
</div>

<div class="card shadow-sm mb-4">
    <div class="card-body">
        <form asp-action="Machines" method="get" class="row g-3">
            <div class="col-md-3">
                <label class="form-label">Tipo</label>
                <select name="type" class="form-select">
                    <option value="">Todos</option>
                    <option value="URBANA" selected="@(typeFilter == "URBANA")">Urbana</option>
                    <option value="AGRICOLA" selected="@(typeFilter == "AGRICOLA")">Agrícola</option>
                    <option value="" selected="@string.IsNullOrEmpty(typeFilter)">Todas</option>

                </select>
            </div>
            <div class="col-md-3">
                <label class="form-label">Categoría</label>
                <input type="text" name="category" value="@categoryFilter" class="form-control" placeholder="Ej. Tractor" />
            </div>
            <div class="col-md-3">
                <label class="form-label">ProviderId</label>
                <input type="text" name="providerId" value="@providerFilter" class="form-control" placeholder="ID de proveedor" />
            </div>
            <div class="col-md-3 d-flex align-items-end gap-2">
                <button type="submit" class="btn btn-primary w-100">
                    <i class="fas fa-filter me-2"></i>Filtrar
                </button>
                <a asp-action="Machines" class="btn btn-outline-secondary">
                    Limpiar
                </a>
            </div>
        </form>
    </div>
</div>

<div class="card shadow-sm">
    <div class="table-responsive">
        <table class="table table-hover align-middle mb-0">
            <thead class="table-light">
                <tr>
                    <th>Título</th>
                    <th>Tipo</th>
                    <th>Categoría</th>
                    <th>Precio/Día</th>
                    <th>Proveedor</th>
                    <th class="text-end">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var machine in Model)
                {
                    <tr>
                        <td>@machine.Title</td>
                        <td>@machine.Type</td>
                        <td>@machine.Category</td>
                        <td>Bs. @machine.PricePerDay.ToString("N2")</td>
                        <td>
                            <div class="d-flex flex-column">
                                <strong>@machine.ProviderName</strong>
                                <small class="text-muted">@machine.ProviderEmail</small>
                            </div>
                        </td>
                        <td class="text-end">
                            <a asp-action="MachineDetails" asp-route-id="@machine.Id" class="btn btn-sm btn-outline-secondary me-2">
                                Detalles
                            </a>
                            <form asp-action="DeleteMachine" asp-route-id="@machine.Id" method="post" class="d-inline" onsubmit="return confirm('¿Eliminar esta máquina?');">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-sm btn-outline-danger">Eliminar</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    @if (!Model.Any())
    {
        <div class="p-4 text-center text-muted">
            No se encontraron máquinas con los filtros seleccionados.
        </div>
    }
</div>

