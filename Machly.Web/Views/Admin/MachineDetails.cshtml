@model Machly.Web.Models.Admin.AdminMachineDetailsDto
@{
    ViewData["Title"] = $"Máquina - {Model.Machine.Title}";
}

<div class="page-header d-flex justify-content-between align-items-center flex-wrap gap-3">
    <div>
        <h1 class="page-title">@Model.Machine.Title</h1>
        <p class="page-subtitle mb-0">@Model.Machine.Description</p>
    </div>
    <div class="d-flex gap-2">
        <form asp-action="DeleteMachine" asp-route-id="@Model.Machine.Id" method="post" onsubmit="return confirm('¿Eliminar esta máquina?');">
            @Html.AntiForgeryToken()
            <button type="submit" class="btn btn-outline-danger">
                <i class="fas fa-trash me-2"></i>Eliminar máquina
            </button>
        </form>
        <a asp-action="Machines" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left me-2"></i>Volver a máquinas
        </a>
    </div>
</div>

<div class="row g-4">
    <div class="col-lg-7">
        <div class="card shadow-sm mb-4">
            <div class="card-body">
                <h5 class="card-title">Información general</h5>
                <dl class="row mb-0">
                    <dt class="col-sm-4">Tipo</dt>
                    <dd class="col-sm-8">@Model.Machine.Type</dd>

                    <dt class="col-sm-4">Categoría</dt>
                    <dd class="col-sm-8">@Model.Machine.Category</dd>

                    <dt class="col-sm-4">Precio por día</dt>
                    <dd class="col-sm-8">Bs. @Model.Machine.PricePerDay.ToString("N2")</dd>

                    <dt class="col-sm-4">Con operador</dt>
                    <dd class="col-sm-8">@((Model.Machine.WithOperator ? "Sí" : "No"))</dd>

                    <dt class="col-sm-4">Ubicación</dt>
                    <dd class="col-sm-8">
                        Lat: @Model.Machine.Lat, Lng: @Model.Machine.Lng
                    </dd>
                </dl>
            </div>
        </div>

        <div class="card shadow-sm mb-4">
            <div class="card-body">
                <h5 class="card-title">Tarifas Agrícolas</h5>
                @if (Model.Machine.TariffsAgro != null)
                {
                    <ul class="list-group list-group-flush">
                        @if (Model.Machine.TariffsAgro.Hectarea.HasValue)
                        {
                            <li class="list-group-item d-flex justify-content-between">
                                <span>Por hectárea</span>
                                <strong>Bs. @Model.Machine.TariffsAgro.Hectarea.Value.ToString("N2")</strong>
                            </li>
                        }
                        @if (Model.Machine.TariffsAgro.Tonelada.HasValue)
                        {
                            <li class="list-group-item d-flex justify-content-between">
                                <span>Por tonelada</span>
                                <strong>Bs. @Model.Machine.TariffsAgro.Tonelada.Value.ToString("N2")</strong>
                            </li>
                        }
                        @if (Model.Machine.TariffsAgro.KmTariffs != null && Model.Machine.TariffsAgro.KmTariffs.Any())
                        {
                            <li class="list-group-item">
                                <strong>Tarifas por km</strong>
                                <ul class="mt-2">
                                    @foreach (var tariff in Model.Machine.TariffsAgro.KmTariffs)
                                    {
                                        <li>@tariff.MinKm - @tariff.MaxKm km: Bs. @tariff.TarifaPorKm.ToString("N2")</li>
                                    }
                                </ul>
                            </li>
                        }
                    </ul>
                }
                else
                {
                    <p class="text-muted mb-0">No se registraron tarifas adicionales.</p>
                }
            </div>
        </div>

        <div class="card shadow-sm">
            <div class="card-body">
                <h5 class="card-title">Reseñas</h5>
                @if (Model.Reviews.Any())
                {
                    <div class="list-group list-group-flush">
                        @foreach (var review in Model.Reviews)
                        {
                            <div class="list-group-item">
                                <div class="d-flex justify-content-between">
                                    <strong>@review.RenterName</strong>
                                    <span class="badge bg-warning text-dark">★ @review.Review!.Rating</span>
                                </div>
                                <p class="mb-1">@review.Review!.Comment</p>
                                <small class="text-muted">Reserva @review.BookingId • @review.CreatedAt.ToLocalTime().ToString("dd/MM/yyyy")</small>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <p class="text-muted mb-0">Aún no hay reseñas registradas.</p>
                }
            </div>
        </div>
    </div>
    <div class="col-lg-5">
        <div class="card shadow-sm mb-4">
            <div class="card-body">
                <h5 class="card-title">Proveedor</h5>
                @if (Model.Provider != null)
                {
                    <dl class="row mb-0">
                        <dt class="col-sm-4">Nombre</dt>
                        <dd class="col-sm-8">@Model.Provider.Name</dd>

                        <dt class="col-sm-4">Email</dt>
                        <dd class="col-sm-8">@Model.Provider.Email</dd>

                        <dt class="col-sm-4">Estado</dt>
                        <dd class="col-sm-8">
                            <span class="badge bg-@(Model.Provider.IsVerifiedProvider ? "success" : "warning text-dark")">
                                @(Model.Provider.IsVerifiedProvider ? "Verificado" : "Pendiente")
                            </span>
                        </dd>
                    </dl>
                }
                else
                {
                    <p class="text-muted mb-0">No se encontró información del proveedor.</p>
                }
            </div>
        </div>

        <div class="card shadow-sm">
            <div class="card-body">
                <h5 class="card-title">Galería</h5>
                @if (Model.Machine.Photos != null && Model.Machine.Photos.Any())
                {
                    <div class="row g-2">
                        @foreach (var photo in Model.Machine.Photos)
                        {
                            <div class="col-6">
                                <div class="ratio ratio-16x9 rounded border" style="background-image:url('@photo.Url');background-size:cover;background-position:center;"></div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <p class="text-muted mb-0">Sin fotos registradas.</p>
                }
            </div>
        </div>
    </div>
</div>

