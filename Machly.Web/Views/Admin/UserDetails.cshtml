@model Machly.Web.Models.Admin.AdminUserDetailsDto
@{
    ViewData["Title"] = "Detalles de Usuario";
}

<div class="page-header">
    <div class="d-flex justify-content-between align-items-center w-100">
        <div>
            <h1 class="page-title">Detalles de Usuario</h1>
            <p class="page-subtitle">Información completa del usuario y su actividad</p>
        </div>
        <a asp-action="Users" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left me-2"></i>Volver
        </a>
    </div>
</div>

<div class="row">
    <div class="col-md-4 mb-4">
        <div class="card shadow-sm h-100">
            <div class="card-body text-center">
                <div class="avatar-placeholder rounded-circle bg-light d-flex align-items-center justify-content-center mx-auto mb-3" style="width: 100px; height: 100px; font-size: 2.5rem;">
                    @Model.User.Name.Substring(0, 1).ToUpper()
                </div>
                <h3 class="card-title">@Model.User.Name</h3>
                <p class="text-muted mb-1">@Model.User.Email</p>
                <div class="mb-3">
                    <span class="badge bg-@(Model.User.Role == "ADMIN" ? "dark" : Model.User.Role == "PROVIDER" ? "primary" : "success")">
                        @Model.User.Role
                    </span>
                </div>
                
                @if (Model.User.Role == "PROVIDER")
                {
                    <div class="border-top pt-3 mt-3">
                        <h5>Estado de Verificación</h5>
                        @if (Model.User.IsVerifiedProvider)
                        {
                            <div class="alert alert-success mb-3">
                                <i class="fas fa-check-circle me-2"></i>Verificado
                            </div>
                            <form asp-action="VerifyProvider" method="post">
                                <input type="hidden" name="userId" value="@Model.User.Id" />
                                <input type="hidden" name="isVerified" value="false" />
                                <input type="hidden" name="returnUrl" value="@Context.Request.Path" />
                                <button type="submit" class="btn btn-outline-warning w-100">
                                    Revocar Verificación
                                </button>
                            </form>
                        }
                        else
                        {
                            <div class="alert alert-warning mb-3">
                                <i class="fas fa-exclamation-circle me-2"></i>Pendiente
                            </div>
                            <form asp-action="VerifyProvider" method="post">
                                <input type="hidden" name="userId" value="@Model.User.Id" />
                                <input type="hidden" name="isVerified" value="true" />
                                <input type="hidden" name="returnUrl" value="@Context.Request.Path" />
                                <button type="submit" class="btn btn-success w-100">
                                    Verificar Proveedor
                                </button>
                            </form>
                        }
                    </div>
                }

                <div class="border-top pt-3 mt-3 text-start">
                    <small class="text-muted d-block mb-1">ID de Usuario</small>
                    <code class="d-block mb-2">@Model.User.Id</code>
                    
                    <small class="text-muted d-block mb-1">Fecha de Registro</small>
                    <span class="d-block">@Model.User.CreatedAt.ToLocalTime().ToString("dd/MM/yyyy HH:mm")</span>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-8">
        @if (Model.User.Role == "PROVIDER")
        {
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-white">
                    <h5 class="card-title mb-0">Máquinas Publicadas (@Model.ProviderMachines.Count)</h5>
                </div>
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Título</th>
                                <th>Tipo</th>
                                <th>Precio</th>
                                <th>Rating</th>
                                <th>Estado</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var machine in Model.ProviderMachines)
                            {
                                <tr>
                                    <td>@machine.Title</td>
                                    <td>@machine.Type</td>
                                    <td>Bs. @machine.PricePerDay.ToString("N2")</td>
                                    <td>@machine.RatingAvg.ToString("F1") (@machine.RatingCount)</td>
                                    <td>
                                        <span class="badge bg-success">Activa</span>
                                    </td>
                                    <td class="text-end">
                                        <a asp-action="MachineDetails" asp-route-id="@machine.Id" class="btn btn-sm btn-outline-secondary">
                                            Ver
                                        </a>
                                    </td>
                                </tr>
                            }
                            @if (!Model.ProviderMachines.Any())
                            {
                                <tr>
                                    <td colspan="6" class="text-center py-4 text-muted">
                                        Este proveedor no ha publicado máquinas.
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        }

        @if (Model.User.Role == "RENTER")
        {
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-white">
                    <h5 class="card-title mb-0">Historial de Reservas (@Model.RenterBookings.Count)</h5>
                </div>
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Máquina</th>
                                <th>Fechas</th>
                                <th>Estado</th>
                                <th>Total</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var booking in Model.RenterBookings)
                            {
                                <tr>
                                    <td>@booking.MachineTitle</td>
                                    <td>
                                        <div class="small">
                                            <div>Del: @booking.Start.ToLocalTime().ToString("dd/MM/yyyy")</div>
                                            <div>Al: @booking.End.ToLocalTime().ToString("dd/MM/yyyy")</div>
                                        </div>
                                    </td>
                                    <td>
                                        <span class="badge bg-@(booking.Status == "CONFIRMED" ? "success" : booking.Status == "COMPLETED" ? "info" : "warning text-dark")">
                                            @booking.Status
                                        </span>
                                    </td>
                                    <td>Bs. @booking.TotalPrice.ToString("N2")</td>
                                </tr>
                            }
                            @if (!Model.RenterBookings.Any())
                            {
                                <tr>
                                    <td colspan="4" class="text-center py-4 text-muted">
                                        Este usuario no ha realizado reservas.
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        }
    </div>
</div>
