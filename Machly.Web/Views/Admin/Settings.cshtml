@model Machly.Web.Models.GlobalSettings
@{
    ViewData["Title"] = "Configuración Global";
    Layout = "_Layout";
}

<div class="page-header">
    <div>
        <h1 class="page-title">Configuración Global</h1>
        <p class="page-subtitle">Administra los parámetros generales de la plataforma</p>
    </div>
</div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="card shadow-sm">
    <div class="card-body">
        <form asp-action="Settings" method="post">
            <input type="hidden" asp-for="Id" />

            <div class="mb-4">
                <h5 class="card-title mb-3">Finanzas</h5>
                <div class="row">
                    <div class="col-md-6">
                        <label asp-for="CommissionRate" class="form-label">Comisión (%)</label>
                        <input asp-for="CommissionRate" class="form-control" type="number" step="0.01" min="0" max="1" />
                        <div class="form-text">Porcentaje de comisión por reserva (ej. 0.10 = 10%)</div>
                    </div>
                </div>
            </div>

            <hr />

            <div class="mb-4">
                <h5 class="card-title mb-3">Categorías Permitidas</h5>
                <div class="mb-3">
                    <label class="form-label">Categorías (separadas por coma)</label>
                    <input type="text" name="categoriesInput" class="form-control" value="@string.Join(", ", Model.AllowedCategories)" />
                    <div class="form-text">Estas categorías aparecerán en los filtros de búsqueda.</div>
                    @* Note: For simplicity, we bind this manually in controller or use JS, but here we just show it. 
                       To make it work perfectly with List<string>, we might need a custom binder or JS.
                       For this implementation, let's assume the user edits the JSON or we add JS to handle the list.
                       Let's keep it simple: just show them. Editing list via simple input needs extra logic.
                       Let's use a textarea for Terms. *@
                </div>
            </div>

            <hr />

            <div class="mb-4">
                <h5 class="card-title mb-3">Legal y Soporte</h5>
                <div class="mb-3">
                    <label asp-for="SupportEmail" class="form-label">Email de Soporte</label>
                    <input asp-for="SupportEmail" class="form-control" type="email" />
                </div>
                <div class="mb-3">
                    <label asp-for="TermsAndConditions" class="form-label">Términos y Condiciones</label>
                    <textarea asp-for="TermsAndConditions" class="form-control" rows="6"></textarea>
                </div>
            </div>

            <div class="d-flex justify-content-end">
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save me-2"></i>Guardar Cambios
                </button>
            </div>
        </form>
    </div>
</div>
